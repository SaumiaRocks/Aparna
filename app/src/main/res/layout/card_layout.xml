<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/linearLayoutUsername"
                android:background="@color/colorPrimary"
                >

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/ivProfilePicture"
                   android:src="@mipmap/ic_profilepic"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="5dp"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:background="@drawable/circle_shape" />

                <LinearLayout

                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    >

                    <TextView
                        android:id="@+id/etPostName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saumia Singhal"
                        android:textSize="17sp"
                        android:textColor="@color/colorIcons"/>

                    <TextView
                        android:id="@+id/etPostTitle"
                        android:layout_width="match_parent"
                        android:textColor="@color/colorIcons"
                        android:layout_height="15sp"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivPostUploadedImage"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/etPostDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Postlikes"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="13sp"
                    android:text="@string/likes"/>

                <TextView
                    android:id="@+id/PostnoOfLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/Postcomments"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="@string/Comments"
                    android:layout_marginLeft="160dp"/>


                <TextView
                    android:id="@+id/PostnoOfComments"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:background="@color/colorSecondaryText"
                android:layout_height="1dp">
            </LinearLayout>

            <android.support.v7.widget.FitWindowsLinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <ImageView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@android:drawable/btn_star" />

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@android:drawable/sym_action_chat" />

                <ImageView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="150dp"
                    app:srcCompat="@android:drawable/ic_menu_recent_history" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@android:drawable/ic_menu_share" />
            </android.support.v7.widget.FitWindowsLinearLayout>


        </LinearLayout>



</android.support.constraint.ConstraintLayout>